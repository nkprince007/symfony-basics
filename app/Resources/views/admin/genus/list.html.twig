{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <th>Genus</th>
        <th># of species</th>
        <th>Sub-Family</th>
        <th>Last updated</th>
        </thead>
        <tbody>
        {% for genus in genuses %}
            <tr>
                <td>
                    <a href="{{ path('genus_show', {'genusname': genus.name}) }}">
                        {{ genus.name }}
                    </a>
                </td>
                <td>{{ genus.speciesCount }}</td>
                <td>{{ genus.subFamily }}</td>
                <td>{{ genus.id }}</td>
                <td>
                    <a href="{{ path('admin_genus_edit', {'id': genus.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center col-sm-12" style="padding-bottom: 2%">
        <a href="genus/new" class="btn btn-primary">ADD ENTRY</a>
    </div>
{% endblock %}